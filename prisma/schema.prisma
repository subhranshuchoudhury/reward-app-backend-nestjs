generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String       @id @default(uuid())
  password   String
  email      String       @unique
  hashedRt   String?
  usedHashes UsedHashes[]

  @@map("users")
}

model UsedHashes {
  id     Int     @id @default(autoincrement())
  hash   String
  User   User?   @relation(fields: [userId], references: [id])
  userId String?
}
